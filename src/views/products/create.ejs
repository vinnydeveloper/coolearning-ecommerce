<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>List roduct</title>
  </head>
  <body>
    <section class="container">
      <div class="d-flex justify-content-center align-items-center">
        <h1 class="m-3">Produtos</h1>
        <a href="/produtos" class="btn btn-primary m-3"
          >Ver lista de produtos</a
        >
      </div>
      <% if(typeof msg !== 'undefined'){ %>
      <div class="alert alert-success" role="alert"><%=msg%></div>
      <%}%>
      <form action="/produtos/cadastrar" method="post">
        <div class="m-3">
          <label for="" class="form-label">Nome</label>
          <input type="text" class="form-control" name="nome" />
        </div>
        <div class="m-3">
          <label for="" class="form-label">Pre√ßo</label>
          <input type="text" class="form-control" name="preco" />
        </div>
        <div class="m-3">
          <label for="" class="form-label">Estoque</label>
          <input type="number" class="form-control" name="estoque" />
        </div>
        <div class="m-3">
          <button class="btn btn-success">Finalizar</button>
        </div>
      </form>
    </section>
  </body>
</html>
