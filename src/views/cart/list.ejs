<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>List roduct</title>
  </head>
  <body>
    <section class="container">
      <div class="d-flex justify-content-center align-items-center">
        <h1 class="m-3">Carrinho</h1>
        <a href="/produtos" class="btn btn-primary m-3">Ver Produtos</a>
      </div>
      <% if(typeof query.msg !== 'undefined'){ %>
      <div class="alert alert-success" role="alert">
        <%=query.msg == "deleted"? "Produto Deletado com suscesso!": ""%>
      </div>
      <%}%>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Preço</th>
            <th scope="col">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% if(!cart.length){ %>
          <h3>Carrinho vazio</h3>
          <% }else{ cart.forEach(product => { %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td>1</td>
            <td>R$ <%= product.price %></td>
            <td>Remover produto</td>
          </tr>
          <%}) } %>
        </tbody>
      </table>
      <h1>Total do carrinho: <%= total %></h1>
    </section>
  </body>
</html>
